@page "/admin/accessdenied"
@layout MainLayout

<PageTitle>Acceso Denegado</PageTitle>

<MudContainer MaxWidth="MaxWidth.Medium" Class="mt-16">
    <MudPaper Elevation="4" Class="pa-8">
        <MudStack Spacing="4" AlignItems="AlignItems.Center">
            <MudIcon Icon="Icons.Material.Filled.NoAccounts" 
                    Size="Size.Large" 
                    Color="Color.Error" 
                    Style="font-size: 4rem;"/>
            
            <MudText Typo="Typo.h4" Color="Color.Error">
                Acceso Denegado
            </MudText>
            
            <MudText Typo="Typo.body1" Align="Align.Center">
                No tienes permisos suficientes para acceder a esta página.
                <br/>
                Contacta al administrador del sistema si crees que esto es un error.
            </MudText>
            
            <MudStack Row="true" Spacing="2" Class="mt-4">
                <MudButton Variant="Variant.Filled" 
                          Color="Color.Primary" 
                          Href="/admin/login"
                          StartIcon="Icons.Material.Filled.Login">
                    Iniciar Sesión
                </MudButton>
                
                <MudButton Variant="Variant.Outlined" 
                          Href="/"
                          StartIcon="Icons.Material.Filled.Home">
                    Ir al Inicio
                </MudButton>
            </MudStack>
        </MudStack>
    </MudPaper>
</MudContainer>